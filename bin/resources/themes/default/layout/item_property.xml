<?xml version="1.0" encoding="UTF-8"?>
<Window>
  <ListContainerElement height="30" bordersize="1" bordercolor="bk_wnd_darkcolor">
    <HBox>
      <Label name="lb_desc" width="100" height="20" valign="center" margin="10,0,0,0"/>
      <Control width="1" bkcolor="bk_wnd_darkcolor"/>
      <TabBox name="tb_input" height="24" valign="center" padding="5,0,10,0">
        <RichEdit name="re_value" multiline="false" wantreturnmsg="true" height="auto" valign="center"/>
        <Label class="combo" name="combo_value" bkcolor="white" width="stretch" align="vcenter"/>
        <HBox>
          <Label name="lb_path" width="stretch" height="auto" valign="center"/>
          <Button name="btn_file" text="..." width="20" height="20" halign="right" bkcolor="white" bordersize="1" bordercolor="dark_gray"/>
        </HBox>
        <HBox>
          <Control name="ctrl_preview" width="20" height="20" bordersize="1" bordercolor="dark_gray" margin="0,0,5,0" valign="center"/>
          <Button name="btn_choose" textid="STRID_CHOOSE" bkcolor="white" bordersize="1" bordercolor="dark_gray" width="80" height="20" valign="center"/>
        </HBox>
      </TabBox>
    </HBox>
  </ListContainerElement>
</Window>